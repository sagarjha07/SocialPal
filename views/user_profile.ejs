<link rel="stylesheet" href="/css/profile.css">
<div class="wrapper">
  <div class="container" style="background:#e9ebee;">
      <div class="wraper">
          <div class="row">
              <div class="col-sm-12">
                  <div class="bg-picture text-center">
                      <div class="bg-picture-overlay"></div>
                      <div class="profile-info-name">
                          <%if(profile_user.avatar){%>
                          <img src="<%=profile_user.avatar%>" style="width: 400px; height: 400px;" class="img-circle img-thumbnail rounded-circle" alt="profile-image">
                      <%}else{%>
                        <img src="/images/default.png" style="width: 400px; height: 400px;" class="img-circle img-thumbnail rounded-circle" alt="profile-image">
                          <%}%>
                          <h3 class="text-white"><%=profile_user.name%></h3>
                      </div>
                  </div>
              </div>
          </div>
          <div class="row user-tabs">
              <div class="col-lg-6 col-md-9 col-sm-9">
                  <ul class="nav nav-tabs tabs" style="width: 100%;">
                      <li class="active tab" style="width: 25%;">
                          <a href="#home-2" data-toggle="tab" aria-expanded="false" class="active">
                              <span class="visible-xs"><i class="fa fa-home"></i></span>
                              <span class="hidden-xs">About Me</span>
                          </a>
                      </li>
                      <% if(user.id==profile_user.id){%>
                      <li class="tab" style="width: 25%;">
                          <a href="#settings-2" data-toggle="tab" aria-expanded="false">
                              <span class="visible-xs"><i class="fa fa-cog"></i></span>
                              <span class="hidden-xs">Settings</span>
                          </a>
                      </li>
                      <%}%>
                      <div class="indicator" style="right: 476px; left: 0px;"></div>
                      <div class="indicator" style="right: 476px; left: 0px;"></div>
                  </ul>
              </div>
              <div class="col-lg-6 col-md-3 col-sm-3 hidden-xs">
                <% if(!user.friendships.includes(profile_user.id) && user.id!=profile_user.id){ %>
                  <div class="pull-right">
                      <div class="dropdown">
                          <a  class="btn-rounded btn btn-primary waves-effect waves-light" href="/users/createfriendship/<%= profile_user._id %>">Add Friend<span class="caret"></span></a>
                          <!-- <ul class="dropdown-menu dropdown-menu-right" role="menu">
                              <li class="divider"></li>
                              <li><a href="#">Unfollow</a></li>
                          </ul> -->
                      </div>
                  </div>
                  <%}else if(user.id!=profile_user.id){%>
                  <div class="pull-right">
                    <div class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle btn-rounded btn btn-primary waves-effect waves-light" href="#"> <i class="fas fa-check"></i>
                            Friends
                            &ensp;<span class="caret"></span></a>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li class="divider"></li>
                            <li><a href="/users/destroyfriendship/<%= profile_user._id %>">Unfriend</a></li>
                        </ul>
                    </div>
                </div>
                <%}%>
              </div>
          </div>
          <div class="row">
              <div class="col-lg-12">

                  <div class="tab-content profile-tab-content">
                      <div class="tab-pane active" id="home-2">
                          <div class="row">
                              <div class="col-md-4">
                                  <!-- Personal-Information -->
                                  <div class="panel panel-default panel-fill">
                                      <div class="panel-heading">
                                          <h3 class="panel-title">Personal Information</h3>
                                      </div>
                                      
                                      <div class="panel-body">
                                          <div class="about-info-p">
                                              <strong>Full Name</strong>
                                              <br>
                                              <p class="text-muted"><%=profile_user.name%></p>
                                          </div>
                                          <div class="about-info-p">
                                              <strong>Mobile</strong>
                                              <br>
                                              <p class="text-muted">(123) 123 1234</p>
                                          </div>
                                          <div class="about-info-p">
                                              <strong>Email</strong>
                                              <br>
                                              <p class="text-muted"><%=profile_user.email%></p>
                                          </div>
                                          <div class="about-info-p m-b-0">
                                              <strong>Location</strong>
                                              <br>
                                              <p class="text-muted">INDIA</p>
                                          </div>
                                  </div>
                                  </div>
                                  <!-- Personal-Information -->


                              </div>

                              <div class="col-md-8">
                                  <!-- Personal-Information -->
                                  <div class="panel panel-default panel-fill">
                                      <div class="panel-heading">
                                          <h3 class="panel-title">Biography</h3>
                                      </div>
                                      <div class="panel-body">
                                          <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged.</p>

                                          <p><strong>But also the leap into electronic typesetting, remaining essentially unchanged.</strong></p>

                                          <p>It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.</p>
                                      </div>
                                  </div>
                                  <!-- Personal-Information -->

                                  

                              </div>

                          </div>
                      </div>

                      

                     
                      <div class="tab-pane" id="settings-2">
                          <!-- Personal-Information -->
                          
                          <div class="panel panel-default panel-fill">
                              <div class="panel-heading">
                                  <h3 class="panel-title">Edit Profile</h3>
                              </div>
                              <div class="panel-body">
                                <form action="/users/update/<%=profile_user.id%>" enctype="multipart/form-data" method="POST">
                                      <div class="form-group">
                                          <label for="FullName">Full Name</label>
                                          <input type="text" value="<%=profile_user.name%> " id="FullName"  name="name" class="form-control" required>
                                      </div>
                                      <div class="form-group">
                                          <label for="Email">Email</label>
                                          <input type="email" value="<%=profile_user.email%>" id="Email"  name="email" class="form-control" required>
                                      </div>
                                      <div class="form-group">
                                        <label for="ProfilePic">Upload Photo</label>
                                        <input type="file"  id="ProfilePic"  name="avatar" class="form-control" placeholder="Profile Picture" >
                                    </div>
                              
                                      <!-- <div class="form-group">
                                          <label for="Password">Password</label>
                                          <input type="password" placeholder="6 - 15 Characters" id="Password" class="form-control">
                                      </div>
                                      <div class="form-group">
                                          <label for="RePassword">Re-Password</label>
                                          <input type="password" placeholder="6 - 15 Characters" id="RePassword" class="form-control">
                                      </div>
                                      <div class="form-group">
                                          <label for="AboutMe">About Me</label>
                                          <textarea style="height: 125px" id="AboutMe" class="form-control">Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat.</textarea>
                                      </div> -->
                                      <input class="btn btn-primary waves-effect waves-light w-md" type="submit" value="Save Changes">
                                  </form>

                              </div>
                          </div>
                          <!-- Personal-Information -->
                      </div>
                  </div>
              </div>
          </div>


          
      </div>
      <!-- end container -->
  </div>
  <!-- end wrapper -->
</div>
  
  